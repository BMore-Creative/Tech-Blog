<section class="message">
  <div class="message-header is-brand-brown">
    <h3 class="title is-3 is-font-green mb-0">
      {{title}}
    </h3>
    <h3 class="title is-5 is-font-green">
      Posted by
      {{User.username}}
      on
      {{format_date createdAt}}
    </h3>
  </div>
  <div class="message-body">
    <p class="content pt-2 pl-3">
      {{body}}
    </p>
    <a href="/project/{{id}}" class="button is-dark is-outlined">Comment on Post</a>
  </div>
</section>